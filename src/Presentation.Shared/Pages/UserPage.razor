@page "/userinfo"

<MudPaper Outlined="true" Square="true" Class="d-flex align-center px-4 py-2">
    <MudText Typo="Typo.h1">@PageHeader</MudText>
</MudPaper>    
<MudContainer MaxWidth="MaxWidth.False">
    <MudPaper Elevation="3" Class="px-4 py-4">
        <MudImage Src="@ImageUrl"/>
        <br />
        <MudText Typo="Typo.h1">@UserName</MudText>
        <MudDivider DividerType="DividerType.Middle" Class="my-6"></MudDivider>
        <MudText Typo="Typo.h2">Claims</MudText>
        @foreach (var claim in User.Claims)
        {
            <MudText Typo="Typo.body1">@claim.Type : @claim.Value</MudText>
        }
    </MudPaper>
</MudContainer>